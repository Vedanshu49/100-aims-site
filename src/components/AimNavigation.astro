---
// src/components/AimNavigation.astro
const { aimNumber, coursePath = '/aims', totalAims = 100 } = Astro.props;
const currentAim = Number(aimNumber);

const prevLink = currentAim > 0 ? `${coursePath}/${currentAim - 1}` : null;
const nextLink = currentAim < (totalAims - 1) ? `${coursePath}/${currentAim + 1}` : null;
---
<nav class="aim-navigation">
    {prevLink && <a href={prevLink} class="nav-button prev">← Previous Aim</a>}
    
    <a href={coursePath} class="nav-button home">Back to All Aims</a>
    
    {nextLink && <a href={nextLink} class="nav-button next">Next Aim →</a>}
</nav>

<style>
    .aim-navigation {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 3rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
        flex-wrap: wrap;
        gap: var(--spacing-md);
    }
    .nav-button {
        display: inline-block;
        padding: var(--spacing-sm) var(--spacing-lg);
        background-color: var(--primary-blue);
        color: white;
        text-decoration: none;
        border-radius: var(--radius-md);
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    .nav-button:hover {
        background-color: #0052a3;
        transform: translateY(-2px);
    }
    .nav-button.home {
        background-color: var(--background-secondary);
        color: var(--text-primary);
    }
    .nav-button.home:hover {
        background-color: var(--primary-blue);
        color: white;
    }
</style>
