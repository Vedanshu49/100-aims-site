---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
    <!-- HERO SECTION -->
    <section class="hero-section">
        <div class="hero-wrapper">
            <div class="hero-text">
                <h1>Master Programming & Web Development</h1>
                <p>Learn by doing with 150+ hands-on challenges. Start from basics, progress to advanced. No prerequisites needed.</p>
                <div class="hero-buttons">
                    <a href="/collections" class="btn btn-primary">Explore All Courses</a>
                    <a href="/contact" class="btn btn-secondary">Contact Me</a>
                </div>
            </div>
            <div class="hero-visual">
                <div class="code-block">
                    <div class="code-header">
                        <span class="dot red"></span>
                        <span class="dot yellow"></span>
                        <span class="dot green"></span>
                    </div>
                    <pre><code>def hello_world():
    print("Ready to code?")

# 150+ challenges await
# Python • HTML • CSS • JavaScript</code></pre>
                </div>
            </div>
        </div>
    </section>

    <!-- QUICK STATS -->
    <section class="stats-section">
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon"></div>
                <div class="stat-info">
                    <div class="stat-number">150+</div>
                    <div class="stat-label">Challenges</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"></div>
                <div class="stat-info">
                    <div class="stat-number">4</div>
                    <div class="stat-label">Courses</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"></div>
                <div class="stat-info">
                    <div class="stat-number">3</div>
                    <div class="stat-label">Difficulty Levels</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"></div>
                <div class="stat-info">
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Free & Open Source</div>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURED COURSES -->
    <section class="featured-courses-section">
        <div class="section-header">
            <h2>Start Your Learning Journey</h2>
            <p>Choose your path and begin mastering code today</p>
        </div>
        
        <div class="featured-grid">
            <!-- Python Course -->
            <a href="/aims" class="course-card python-card">
                <div class="course-badge">Popular</div>
                <div class="course-icon"></div>
                <h3>Python Programming</h3>
                <p class="course-meta">100 Challenges • Beginner to Advanced</p>
                <p class="course-desc">Master Python from variables and loops to OOP and algorithms. Perfect for beginners.</p>
                <div class="course-footer">
                    <span class="challenge-count">100 Challenges</span>
                    <span class="arrow">→</span>
                </div>
            </a>
<br>
            <!-- HTML Course -->
            <a href="/html-aims" class="course-card html-card">
                <div class="course-badge">New</div>
                <div class="course-icon"></div>
                <h3>Web Development: HTML</h3>
                <p class="course-meta">50 Challenges • Beginner to Intermediate</p>
                <p class="course-desc">Build strong HTML foundations with semantic markup, forms, and accessibility best practices.</p>
                <div class="course-footer">
                    <span class="challenge-count">50 Challenges</span>
                    <span class="arrow">→</span>
                </div>
            </a>
<br>
            <!-- CSS Course - Coming Soon -->
            <a href="/collections" class="course-card css-card coming-soon">
                <div class="course-badge">Coming Soon</div>
                <div class="course-icon"></div>
                <h3>CSS Fundamentals</h3>
                <p class="course-meta">50+ Challenges • Planned</p>
                <p class="course-desc">Master styling, layouts, and animations. Learn Flexbox, Grid, and responsive design.</p>
                <div class="course-footer">
                    <span class="challenge-count">50+ Challenges</span>
                    <span class="arrow">→</span>
                </div>
            </a>
        </div>
    </section>

    <!-- WHY CHOOSE US -->
    <section class="benefits-section">
        <div class="section-header">
            <h2>Why CodeQuests?</h2>
            <p>Everything you need to learn programming effectively</p>
        </div>

        <div class="benefits-grid">
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Structured Learning</h3>
                <p>Carefully designed progression from basics to advanced topics. Learn what matters most.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Smart Search & Filter</h3>
                <p>Find exactly what you need. Filter by difficulty, topics, and keywords instantly.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Track Your Progress</h3>
                <p>Mark challenges complete and watch your progress grow. Stay motivated with visual feedback.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Dark Mode Included</h3>
                <p>Learn comfortably day or night with built-in dark mode. Easy on your eyes.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Works Everywhere</h3>
                <p>Responsive design works perfectly on mobile, tablet, and desktop. Learn on the go.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon"></div>
                <h3>Always Free</h3>
                <p>100% free and open source. No ads, no paywalls, no hidden costs. Forever.</p>
            </div>
        </div>
    </section>

    <!-- CTA SECTION -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Start Coding?</h2>
            <p>Join thousands of learners mastering programming and web development</p>
            <div class="cta-buttons">
                <a href="/collections" class="btn btn-primary btn-large">Explore All Courses</a>
                <a href="/aims" class="btn btn-outline btn-large">Start Learning</a>
            </div>
        </div>
    </section>
</BaseLayout>
