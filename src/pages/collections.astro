---
import BaseLayout from '../layouts/BaseLayout.astro';
import { courses, plannedCourses } from '../data/courses';
---

<BaseLayout>
  <div class="max-w-7xl mx-auto px-4 md:px-8 w-full py-12">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
        Learning Collections
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Choose your learning path and master web development and programming. Start with fundamentals and progress to advanced topics.
      </p>
    </div>

    <!-- Active Courses Section -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100">
        üöÄ Start Learning Now
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {courses.map((course) => (
          <div class="course-card course-card-{course.colorClass}">
            <div class="course-card-header">
              <div class="course-icon">{course.icon}</div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
                  {course.name}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {course.totalAims} Challenges
                </p>
              </div>
            </div>

            <p class="course-description text-gray-700 dark:text-gray-300 mb-4">
              {course.description}
            </p>

            <div class="mb-4">
              <div class="flex flex-wrap gap-2 mb-3">
                {course.difficulty.map((level) => (
                  <span class={`difficulty-badge difficulty-${level.toLowerCase()}`}>
                    {level}
                  </span>
                ))}
              </div>
              <div class="flex flex-wrap gap-2">
                {course.tags.slice(0, 3).map((tag) => (
                  <span class="inline-block px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                    {tag}
                  </span>
                ))}
                {course.tags.length > 3 && (
                  <span class="inline-block px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                    +{course.tags.length - 3} more
                  </span>
                )}
              </div>
            </div>

            <a href={course.path} class="course-cta-button">
              Start Learning ‚Üí
            </a>
          </div>
        ))}
      </div>
    </div>

    <!-- Planned Courses Section -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100">
        üîÆ Coming Soon
      </h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        More learning paths are in development. Stay tuned for CSS, JavaScript, and more!
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {plannedCourses.map((course) => (
          <div class="course-card course-card-coming-soon">
            <div class="course-card-header opacity-75">
              <div class="course-icon text-3xl">{course.icon}</div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
                  {course.name}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {course.totalAims} Challenges
                </p>
              </div>
            </div>

            <p class="course-description text-gray-700 dark:text-gray-300 mb-4 opacity-75">
              {course.description}
            </p>

            <div class="mb-4 opacity-75">
              <div class="flex flex-wrap gap-2 mb-3">
                {course.difficulty.map((level) => (
                  <span class={`difficulty-badge difficulty-${level.toLowerCase()}`}>
                    {level}
                  </span>
                ))}
              </div>
            </div>

            <div class="course-coming-soon-badge">
              Coming Soon
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Features Section -->
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-800 rounded-2xl p-8 md:p-12">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100 text-center">
        Why Choose Our Learning Platform?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="feature-box">
          <div class="text-4xl mb-3">üìö</div>
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">
            Structured Learning
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Carefully curated challenges progress from beginner to advanced
          </p>
        </div>

        <div class="feature-box">
          <div class="text-4xl mb-3">üéØ</div>
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">
            Hands-On Practice
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Learn by doing with practical, real-world coding challenges
          </p>
        </div>

        <div class="feature-box">
          <div class="text-4xl mb-3">‚ö°</div>
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">
            Quick to Learn
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Each challenge takes 10-20 minutes, perfect for busy learners
          </p>
        </div>

        <div class="feature-box">
          <div class="text-4xl mb-3">üèÜ</div>
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">
            Track Progress
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Mark challenges as complete and build your learning streak
          </p>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center py-12">
      <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-gray-100">
        Ready to Start Learning?
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        Choose a course above and begin your coding journey today!
      </p>
      <a href="/aims" class="action-button text-lg px-8 py-3">
        Get Started with Python ‚Üí
      </a>
    </div>
  </div>

  <style>
    .course-card {
      @apply p-6 rounded-xl border-2 transition-all duration-300 h-full flex flex-col;
      @apply bg-white dark:bg-gray-800 hover:shadow-xl hover:-translate-y-1;
    }

    .course-card-blue {
      @apply border-blue-200 dark:border-blue-900 hover:border-blue-400;
    }

    .course-card-orange {
      @apply border-orange-200 dark:border-orange-900 hover:border-orange-400;
    }

    .course-card-cyan {
      @apply border-cyan-200 dark:border-cyan-900 hover:border-cyan-400;
    }

    .course-card-yellow {
      @apply border-yellow-200 dark:border-yellow-900 hover:border-yellow-400;
    }

    .course-card-coming-soon {
      @apply border-gray-300 dark:border-gray-600 opacity-75 cursor-not-allowed;
    }

    .course-card-header {
      @apply flex items-start gap-4 mb-4;
    }

    .course-icon {
      @apply text-4xl flex-shrink-0;
    }

    .course-description {
      @apply text-sm line-clamp-3 mb-auto;
    }

    .course-cta-button {
      @apply w-full py-3 px-4 bg-gradient-to-r font-semibold rounded-lg transition-all duration-300;
      @apply text-white text-center block;
      @apply hover:shadow-lg hover:scale-105 active:scale-95;
    }

    .course-card-blue .course-cta-button {
      @apply from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700;
    }

    .course-card-orange .course-cta-button {
      @apply from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700;
    }

    .course-card-cyan .course-cta-button {
      @apply from-cyan-500 to-cyan-600 hover:from-cyan-600 hover:to-cyan-700;
    }

    .course-card-yellow .course-cta-button {
      @apply from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700;
    }

    .course-coming-soon-badge {
      @apply w-full py-3 px-4 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300;
      @apply font-semibold rounded-lg text-center cursor-not-allowed;
    }

    .feature-box {
      @apply p-6 bg-white dark:bg-gray-700 rounded-lg text-center;
      @apply hover:shadow-md transition-shadow duration-300;
    }

    .difficulty-badge {
      @apply inline-block px-3 py-1 rounded-full text-xs font-semibold;
    }

    .difficulty-beginner {
      @apply bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200;
    }

    .difficulty-intermediate {
      @apply bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200;
    }

    .difficulty-advanced {
      @apply bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200;
    }
  </style>
</BaseLayout>
