---
import BaseLayout from '../layouts/BaseLayout.astro';
import { courses, plannedCourses } from '../data/courses';
---

<BaseLayout>
  <div class="collections-container">
    <!-- Header Section -->
    <div class="collections-header">
      <h1>Explore All Courses</h1>
      <p>Choose your learning path and master programming. Start with any course and progress at your own pace.</p>
    </div>

    <!-- Active Courses Section -->
    <div class="course-section">
      <h2>Available Courses</h2>
      <div class="course-grid">
        {courses.map((course) => (
          <a href={course.path} class={`course-card ${course.colorClass}-card`}>
            <div class="course-badge">Ready</div>
            <div class="course-icon">{course.icon}</div>
            <h3>{course.name}</h3>
            <p class="course-meta">{course.totalAims} Challenges • {course.difficulty.join(', ')}</p>
            <p class="course-desc">{course.description}</p>
            <div class="course-footer">
              <span class="challenge-count">{course.totalAims} Challenges</span>
              <span class="arrow">→</span>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Planned Courses Section -->
    <div class="course-section">
      <h2>Coming Soon</h2>
      <p style="color: var(--text-secondary); margin-bottom: 2rem;">
        More courses are in development. Check back soon for CSS, JavaScript, and more!
      </p>
      <div class="course-grid">
        {plannedCourses.map((course) => (
          <div class={`course-card ${course.colorClass}-card coming-soon`}>
            <div class="course-badge">Coming Soon</div>
            <div class="course-icon">{course.icon}</div>
            <h3>{course.name}</h3>
            <p class="course-meta">{course.totalAims} Challenges • {course.difficulty.join(', ')}</p>
            <p class="course-desc">{course.description}</p>
            <div class="course-footer">
              <span class="challenge-count">{course.totalAims} Challenges</span>
              <span class="arrow">→</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Features Section -->
    <section class="benefits-section">
      <div class="section-header">
        <h2>Why Our Platform?</h2>
        <p>Everything you need to learn effectively</p>
      </div>
      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Structured Learning</h3>
          <p>Carefully curated challenges from beginner to advanced</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Hands-On Practice</h3>
          <p>Learn by doing with practical, real-world challenges</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Quick Sessions</h3>
          <p>Each challenge takes 10-20 minutes, perfect for busy learners</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Track Progress</h3>
          <p>Mark challenges complete and build your learning streak</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Mobile Friendly</h3>
          <p>Learn anywhere, anytime on any device</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon"></div>
          <h3>Always Free</h3>
          <p>No ads, no paywalls, forever free and open source</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2>Ready to Start Your Learning Journey?</h2>
        <p>Choose a course above or start with Python fundamentals</p>
        <div class="cta-buttons">
          <a href="/aims" class="btn btn-primary btn-large">Start Python Course</a>
          <a href="/html-aims" class="btn btn-outline btn-large">Explore HTML</a>
          <a href="/contact" class="btn btn-outline btn-large">Contact Me</a>
        </div>
      </div>
    </section>
</BaseLayout>
